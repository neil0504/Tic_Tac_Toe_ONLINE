<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/invited_player_profile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/guest"
            tools:srcCompat="@drawable/background" />

        <TextView
            android:id="@+id/invited_player_displayName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="3"
            android:fontFamily="@font/aclonica"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:text="Player Name"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/invited_player_play"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:text="PLAY"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/delete_player_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8sp"
            android:layout_marginEnd="11dp"
            app:srcCompat="@drawable/ic_close" />

    </LinearLayout>
</androidx.cardview.widget.CardView>